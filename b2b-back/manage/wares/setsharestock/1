<script>
    function getCheckAdIds() {
        var adIds = "";
        $("input:checkbox:checked").each(function(i){
            if(0==i){
                adIds = $(this).val();
            }else{
                adIds += (","+$(this).val());
            }
        });
        //alert(adIds);
        var formdata={ware_id:adIds}


            //alert('cccccc');
        $.post('/ware/sendwareid',formdata)

    }

  //设置日期的日历
  $(function () {
      $("#dd_s_date").datepicker({ dateFormat: 'yy-mm-dd' });
      
  });



</script>




