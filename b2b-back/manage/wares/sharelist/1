  <script>
    $('.update').click(function(){
      var num=$(this).parent().siblings('.surplus').text();
      $('.update-surplus').val(num)
      $('#myModal').animate({'opacity':1,'top':5+'%'}).show()
      $('.close,.cancel').click(function(){
        $('#myModal').animate({'top':-30+'%','opacity':0}).slideUp();
      })
    })
  </script>
