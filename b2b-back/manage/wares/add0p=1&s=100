        $(function(){
            var $self = $("input[name='self_trffic']:checked");
            if ($self.val() == 'selfTraffic' ){
                $("#traffic_set").css({'display':'none'});







            }
            $("input[name='self_trffic']").change(function() {
                var $v = $("input[name='self_trffic']:checked").val();
                if ( $v == 'selfTraffic') {

                    $("#traffic_set").slideUp(1000)











                }else{
                    $("#traffic_set").slideDown(1000);

                }

