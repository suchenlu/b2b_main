<script type="text/javascript">
    $("#txttourdays").blur(function () {

    //$("#txttourdays").focus(function () {
    //$('#txttourdays').keyup(function(){
    var intlen = 0, intcnt = 0, html = "";
    intlen = $("#tablinedate tr").length;
    if (($("#txttourdays").val() * 1) > 0) {
        intcnt = $("#txttourdays").val();
    }
    else {
        intcnt = 0;
    }

    if (intlen * 1 != (intcnt * 1)) {//如果表格不等于天数
        for (i = intlen; i >= intcnt * 1; i--) {
            $("#tablinedate tr:eq(" + i + ")").remove();
        }
    }
    for (i = intlen + 1; i <= intcnt; i++) {
        html = "<tr>";
        html += "<td align=\"center\">第" + i + "天</td>";
        html += "<td align=\"center\"><textarea name=\"trip_" + i + "\" placeholder=\"第" + i + "天行程" + "\" id=\"trip_" + i + "\" class=\"inputtext\" style=\"height:100%;width:100%;\"></textarea></td>";
        html += "<td align=\"center\"><textarea name=\"hotel_" + i + "\" placeholder=\"第" + i + "天住宿" + "\" id=\"hotel_" + i + "\" class=\"inputtext\" style=\"height:100%;width:100%;\"></textarea></td>";
        html += "<td align=\"center\"><input type=\"checkbox\" name=\"breakfast_" + i + "\" value=\"1\" />早<br /><input type=\"checkbox\" name=\"lunch_" + i + "\" value=\"1\" />中<br /><input type=\"checkbox\" name=\"dinner_" + i + "\" value=\"1\" />晚</td>";
        html += "</tr>";

        $("#tablinedate").append(html);
    }
    // });
    });
</script>
<script type="text/javascript">
    //限制表单输入非数字
    function astrictNaN(x){
        x.value=x.value.replace(/[^\d]|^0\d|$/g,"");
        // x.value=x.value.replace(/^$/g,"0");
    }

</script>
