<script src='../../../static/js/jquery.js'></script>
<script src='../../../static/js/jquery-ui.js'></script>
<script src='../../../static/js/fullcalendar.min.js'></script>
<script src='../../../static/js/jquery.fancybox-1.3.1.pack.js'></script>
<script type="text/javascript">
    $(function() {
        $('#calendar').fullCalendar({
            header: {
                left: 'prev',
                center: 'title',
                right: 'next'
            },
            editable: true,
            dragOpacity: {
                agenda: .5,
                '':.6
            },


            selectable: true,
            select: function( startDate, endDate, allDay, jsEvent, view ){
                var start =$.fullCalendar.formatDate(startDate,'yyyy-MM-dd');
                var end =$.fullCalendar.formatDate(endDate,'yyyy-MM-dd');
                $.fancybox({
                    'type':'ajax',
                    'href':'/manage/wares/setevent/1000000816?action=add&date='+start+'&end='+end
                });
               // alert('in');
            },




            events: '/manage/wares/warejson/1000000816',
            dayClick: function(date, allDay, jsEvent, view) {
                var selDate =$.fullCalendar.formatDate(date,'yyyy-MM-dd');
                $.fancybox({
                    'type':'ajax',
                    'href':'/manage/wares/setevent/1000000816?action=add&date='+selDate
                });

                var nday = new Date();
                var ago = new Date();
                var sell = selDate.split('-');
                ago.setFullYear(sell[0],sell[1],sell[2]);
                if (nday > ago){
                    alert('日期已经过期，不能设置时价');
                    selectable: false;
                }else{
                    selectable: true;
                }
                //alert(ago);
                //alert('dayclick'+ selDate);
            },
            eventClick: function(calEvent, jsEvent, view) {
                $.fancybox({
                    'type':'ajax',
                    'href':'/manage/wares/setevent/1000000816?sku_id='+calEvent.id+'&action=edit'
                });

                //alert('eventclick' + calEvent.id);
            }
        });

    });
    </script>
