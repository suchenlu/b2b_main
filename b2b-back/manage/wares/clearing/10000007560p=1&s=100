<script src="../../../static/js/jquery.js"></script>
<script src="../../../static/js/bootstrap.min.js"></script>

    <script>
        function viewTitle(){
            alert(this.title);
            var title = this.title;
            $("#view").p.val(title);
        }
        $(document).ready(function(){
            var $div = $('#viewmess');
            var $tr = $('<tr></tr>');
            var $tbody = $('<tbody></tbody');

            $div.hide();
            $('.col-sm-2').mouseover(function() {
                $(this).css('color','red');
                $(this).siblings().css('color','block');
                $.get('/manage/getcommistion/' + $(this).find('input').val(), function (data, s) {
                    //alert(data.length);
                    $tr.html('');
                    //alert(data.commission_name);
                    for (var i = 0; i < data.data.length; i++) {
                        var $td = $('<td></td>');
                        $td.text(data.data[i]);
                        $tr.append($td);

                    }

                    //$tbody.append($tr);
                    $tr.appendTo($tbody);
                    $tbody.appendTo($('table'));
                    //alert($('table').html());
                    $div.show();
                }, 'json')
            })



        });

    </script>




