    <script>
        $(function () {
            $("#submit").click(function () {

                var id = document.getElementById("id").value;
                var date = document.getElementById("jy").value;
                var end = document.getElementById("jj").value;
                if (id == "" && date == "" && end == "") {
                    alert("请至少输入一个查询条件");
                    return false;
                }
                else {
                    if (!istel(id) && id != "") {
                        alert("没有匹配的查询结果");
                        return false;
                    }
                    return true;

                }

                function toDate(str) {
                    var date = str.split("-");
                    return new Date(date[0], date[1], date[2]);
                }

                var date = toDate($("#jy").val());
                var end = toDate($("#jj").val());
                if (date > end) {
                    alert("起始日期必须小于结束日期");
                    return false;
                }

            })
            $("#id").attr("placeholder", "请输入正确订单号");
            function istel(tel) {
                var num1 = /[A-Za-z].*[0-9]|[0-9].*[A-Za-z]/;
                return (num1.test(tel));
            }
        })

    </script>
