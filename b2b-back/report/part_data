    <script>
        $(function () {
            $("#submit").click(function () {

                var name = document.getElementById("name").value;
                var date = document.getElementById("jy").value;
                var end = document.getElementById("jj").value;
                if (name == "" && date == "" && end == "") {
                    alert("请至少输入一个查询条件");
                    return false;
                }
                else {
                    if (!isdata(name) && name != "") {
                        alert("没有匹配的查询结果");
                        return false;
                    }
                    return true;

                }

                function toDate(str) {
                    var date = str.split("-");
                    return new Date(date[0], date[1], date[2]);
                }

                var date = toDate($("#jy").val());
                var end = toDate($("#jj").val());
                if (date > end) {
                    alert("起始日期必须小于结束日期");
                    return false;
                }

            })
            $("#name").attr("placeholder", "请输入正确产品名称");
            function isdata(text) {
                var reg = /^[\u4e00-\u9fa5a-zA-Z0-9]+$/;
                return (reg.test(text));
            }
        })

    </script>

