    <script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
    <script>
        $(function () {
            $("#submit").click(function () {

                var number = document.getElementById("number").value;
                var date_return = document.getElementById("jy").value;
                var end1 = document.getElementById("jj").value;
                var date_depart = document.getElementById("JY").value;
                var end = document.getElementById("JJ").value;
                if (number == "" && date_return == "" && date_depart == "" && end == "" && end1 == "") {
                    alert("请至少输入一个查询条件");
                    return false;
                }
                else {
                    if (!istel(number) && number != "") {
                        alert("没有匹配的查询结果");
                        return false;
                    }
                    return true;

                }

                function toDate(str) {
                    var date = str.split("-");
                    return new Date(date[0], date[1], date[2]);
                }

                var date_return = toDate($("#jy").val());
                var end1 = toDate($("#jj").val());
                if (date_return > end1) {
                    alert("起始日期必须小于结束日期");
                    return false;
                }
                var date_depart = toDate($("#JY").val());
                var end = toDate($("#JJ").val());
                if (date_depart > end) {
                    alert("起始日期必须小于结束日期");
                    return false;
                }

            })
            $("#number").attr("placeholder", "请输入正确产品编号");
            function istext(text) {
                var reg = /[^\x00-\x80]/;
                return (reg.test(text));
            }

            function istel(tel) {
                var num1 = /[A-Za-z].*[0-9]|[0-9].*[A-Za-z]/;
                return (num1.test(tel));
            }
        })

    </script>
