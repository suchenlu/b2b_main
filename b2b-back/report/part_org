    <script>
        $(function () {
            $("#submit").click(function () {

                var ware_name = document.getElementById("ware_name").value;
                var org_name = document.getElementById("org_name").value;
                var receive_date = document.getElementById("jy").value;
                var end = document.getElementById("jj").value;
                if (ware_name == "" && receive_date == "" && org_name == "" && end == "") {
                    alert("请至少输入一个查询条件");
                    return false;
                }
                else {
                    if (!isdata(ware_name) && ware_name != "") {
                        alert("没有匹配的查询结果");
                        return false;
                    }

                    if (!isdata(org_name) && org_name != "") {
                        alert("没有匹配的查询结果");
                        return false;
                    }
                    return true;

                }

                function toDate(str) {
                    var date = str.split("-");
                    return new Date(date[0], date[1], date[2]);
                }

                var receive_date = toDate($("#jy").val());
                var end = toDate($("#jj").val());
                if (receive_date > end) {
                    alert("起始日期必须小于结束日期");
                    return false;
                }

            })
            $("#ware_name").attr("placeholder", "请输入正确产品名称");
            $("#org_name").attr("placeholder", "请输入正确组织名称");
            function isdata(text) {
                var reg = /^[\u4e00-\u9fa5a-zA-Z0-9]+$/;
                return (reg.test(text));
            }
        })

    </script>
